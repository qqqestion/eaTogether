<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/colorLiteGrey">

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/rounded_button_light_grey"
        android:clickable="false"
        android:fontFamily="@font/spirax"
        android:text="@string/eatogether"
        android:textAllCaps="false"
        android:textColor="#E9AD95"
        android:textSize="40dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fon"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_button_light_grey"
        android:hint="@string/name"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/register_surname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_light_grey"
        android:hint="@string/surname"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/register_birthday"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_light_grey"
        android:hint="@string/birthday"
        android:inputType="date"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_surname"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/register_description"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_light_grey"
        android:hint="@string/description"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_birthday"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/register_confirm"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_green"
        android:text="@string/continue"
        android:textColor="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
