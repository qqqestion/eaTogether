<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@color/colorLiteGrey">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/fon"
            tools:ignore="MissingConstraints" />

    <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/rounded_button_light_grey"
            android:clickable="false"
            android:fontFamily="@font/spirax"
            android:text="@string/eatogether"
            android:textAllCaps="false"
            android:textColor="#E9AD95"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2">

        <EditText
                android:id="@+id/register_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_light_grey"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="15dp"
                tools:ignore="MissingConstraints" />


        <EditText
                android:id="@+id/register_surname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_light_grey"
                android:hint="@string/surname"
                android:inputType="text"
                android:padding="15dp"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_name"
                tools:ignore="MissingConstraints" />

        <EditText
                android:id="@+id/register_birthday"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_light_grey"
                android:hint="@string/birthday"
                android:inputType="date"
                android:padding="15dp"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_surname"
                tools:ignore="MissingConstraints" />

        <EditText
                android:id="@+id/register_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_light_grey"
                android:hint="@string/description"
                android:inputType="text"
                android:padding="15dp"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_birthday"
                tools:ignore="MissingConstraints" />
    </LinearLayout>


    <Button
            android:id="@+id/register_confirm"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_button_green"
            android:text="@string/my_continue"
            android:textColor="#EEEEEE"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
