<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="@color/colorLiteGrey">

    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="@dimen/eatogether_title_width"
        android:layout_height="@dimen/eatogether_title_height"
        android:layout_marginTop="@dimen/eatogether_title_mangin_top"
        android:background="@drawable/rounded_button_light_grey"
        android:fontFamily="@font/spirax"
        android:gravity="center"
        android:text="@string/eatogether"
        android:textColor="@color/colorPink"
        android:textSize="@dimen/eatogether_title_font"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/register_first_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_app_name">

        <EditText
            android:id="@+id/register_email_field"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_app_name"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/register_password_field"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_password_field"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/register_password_confirmation_field"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_email_field" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_second_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_app_name">

        <EditText
            android:id="@+id/register_first_name_field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="15dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/register_last_name_field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/surname"
            android:inputType="text"
            android:padding="15dp"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_first_name_field"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/register_birthday_field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/birthday"
            android:inputType="date"
            android:padding="15dp"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_last_name_field"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/register_description_field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_light_grey"
            android:hint="@string/description"
            android:inputType="text"
            android:padding="15dp"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_birthday_field"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <Button
        android:id="@+id/register_next_and_confirm"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_button_green"
        android:text="@string/next"
        android:textColor="@color/colorLiteGrey"
        app:layout_constraintBottom_toTopOf="@+id/register_cancel_and_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register_cancel_and_back"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/auth_buttons_margin_bot"
        android:background="@drawable/rounded_button_pink"
        android:text="@string/cancel"
        android:textColor="@color/colorLiteGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
