<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80A898"
    tools:context=".ui.nearby.NearbyFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNearbyUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"
        tools:listitem="@layout/item_user_preview"
        />

    <TextView
        android:id="@+id/tvUserListIsEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Похоже, что вы просмотрели всех пользователей"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
